@page
@model IndexModel
@{
    ViewData["Title"] = "Game view";
}
<h1>@ViewData["Title"]</h1>
<a class="btn" asp-page="./AddNew">ADD</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Picture</th>
            <th>Description</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <form method="get">
                <tr>
                    <td>@item.Gid</td>
                    <td>@item.GameName</td>
                    <td>@item.Price</td>
                    <td><img style="width:20vmin; height: auto;" src="~/upload/img/@item.Picture" alt="Image"/></td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn" asp-page="./Edit" asp-route-id="@item.Gid">Edit</a>
                        <button class="btn" type="button" onclick="location.href='?handler=Delete&id=@item.Gid'">Delete</button>
                    </td>
                </tr>
            </form>
        }
    </tbody>
</table>